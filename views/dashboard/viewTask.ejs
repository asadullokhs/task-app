<div class="container">
  <div class="row mb-4">
    <div class="col">
      <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
          <li class="breadcrumb-item"><a href="/dashboard">Dashboard</a></li>
          <li class="breadcrumb-item active" aria-current="page">
            <%= task.title %>
          </li>
        </ol>
      </nav>
    </div>
  </div>

  <div class="delete-button mb-4">
    <a href="/dashboard/delete/<%= task._id %>" class="btn btn-danger"
      >Delete</a
    >
  </div>
  <form action="/dashboard/update/<%= task._id  %>" method="post">
    <div class="form-group mb-4">
      <input
        type="text"
        class="form-control fw-bold border-1"
        placeholder="Title"
        name="title"
        value="<%= task.title %>"
        required
      />
    </div>
    <div class="form-group mb-4">
      <textarea
        class="form-control"
        name="body"
        id="body"
        cols="30"
        rows="10"
        required="true"
        placeholder="Enter a body..."
      >
<%= task.body %></textarea
      >
    </div>
    <div class="form-group mb-4">
      <button class="btn btn-primary">Update</button>
    </div>
  </form>
</div>
