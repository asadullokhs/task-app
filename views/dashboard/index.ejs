<div class="container pb-5 mb-5">
  <div class="row mb-4">
    <div class="col">
      <h1>Hello <%= userName%></h1>
    </div>
    <div class="col text-end">
      <a class="btn btn-primary" href="/dashboard/add">+ new task</a>
    </div>
  </div>

  <div class="row">
    <% if(tasks.length > 0){ tasks.forEach(task => { %>
    <div class="col-12 col-sm-3 col-md-4 col-lg-3 mb-4">
      <div class="card border-primary" style="min-height: 210px">
        <a href="/dashboard/item" class="card-body text-decoration-none">
          <h5 class="card-title"><%= task.title %></h5>
          <p class="card-text text-truncate"><%= task.body %></p>
        </a>
      </div>
    </div>
    <% }) } else { %>
    <div class="row">
      <div class="col-3">
        <img class="img-fluid" src="/images/hero.jpg" alt="task-image" />
      </div>
      <div class="col mt-md-4">
        <h2>Welcome</h2>
        <h4>Let's start your first task!</h4>
        <a href="/dashboard/add">Create One</a>
      </div>
    </div>
    <% } %> <% if(tasks.length > 0){ %>
    <nav aria-label="Page navigation example">
      <ul class="pagination">
        <% if(current == 1) { %>
        <li class="page-item">
          <a class="page-link" href="#" aria-label="Previous">
            <span aria-hidden="true">&laquo;</span>
          </a>
        </li>
        <% } else { %>
        <li class="page-item"><a class="/dashboard" href="#">1</a></li>
        <% } let i = current > 5 ? current - 4 : 1 %> for(i = current) %>
        <li class="page-item"><a class="page-link" href="#">2</a></li>
        <li class="page-item"><a class="page-link" href="#">3</a></li>
        <li class="page-item">
          <a class="page-link" href="#" aria-label="Next">
            <span aria-hidden="true">&raquo;</span>
          </a>
        </li>
      </ul>
    </nav>
    <% } %>
  </div>
</div>
