<style>
  .row .col h1 {
    font-size: 24px;
    padding-top: 10px;
  }

  .row .col img {
    width: 50px;
    height: 50px;
  }
</style>
<div class="container pb-5 mb-5">
  <div class="row mb-4 align-items-center">
    <div class="col">
      <a class="new" href="/dashboard/add"
        ><script src="https://cdn.lordicon.com/lordicon.js"></script>
        <lord-icon
          src="https://cdn.lordicon.com/rcgrnzji.json"
          trigger="hover"
          state="hover-swirl"
          colors="primary:#1e90ff,secondary:#4030e8"
          style="width: 50px; height: 50px"
        >
        </lord-icon>
      </a>
    </div>
    <div class="col d-flex justify-content-end align-items-center">
      <h1><%= userName%></h1>
      <img
        class="ms-2"
        style="border-radius: 50%"
        src="<%= photo%>"
        alt="profileImage"
      />
    </div>
  </div>

  <div class="row">
    <% if(tasks.length > 0){ tasks.forEach(task => { %>
    <div class="col-12 col-sm-3 col-md-4 col-lg-3 mb-4">
      <div class="card border-primary" style="min-height: 210px">
        <a
          href="/dashboard/item/<%= task._id  %>"
          class="card-body text-decoration-none"
        >
          <h5 class="card-title"><%= task.title %></h5>
          <p class="card-text text-truncate"><%= task.body %></p>
        </a>
      </div>
    </div>
    <% }) } else { %>
    <div class="row">
      <div class="col-3">
        <img
          class="img-fluid no-task-img"
          src="/images/hero.jpeg"
          alt="task-image"
        />
      </div>
      <div class="col mt-md-4">
        <h2>Welcome</h2>
        <h4>Let's start your first task!</h4>
        <a href="/dashboard/add">Create One</a>
      </div>
    </div>
    <% } if(tasks.length > 0){ %>
    <nav aria-label="Page navigation example">
      <ul class="pagination">
        <% if(current == 1) { %>
        <li class="page-item">
          <a class="page-link" href="#"> Previous </a>
        </li>
        <% } else { %>
        <li class="page-item">
          <a class="page-link" href="/dashboard">First</a>
        </li>
        <% } let i = current > 5 ? current - 4 : 1 %> <% if(i !== 1) { %>
        <li class="page-item"><a class="page-link" href="#">...</a></li>
        <% } %> <% for( ; i <= current + 4 && i < pages; i++ ) { %> <% if(i ==
        current) { %>
        <li class="page-item"><a class="page-link" href="#"><%= i %></a></li>
        <% } else { %>
        <li class="page-item">
          <a class="page-link" href="/dashboard/?page=<%= i %>"><%= i %></a>
        </li>
        <% } %> <% if(i == current + 4 && i < pages) { %>
        <li class="page-item"><a class="page-link" href="#">...</a></li>
        <% } %> <% } %> <% if(pages == current) { %>
        <li class="page-item"><a class="page-link" href="#">Last</a></li>
        <% } else { %>
        <li class="page-item">
          <a class="page-link" href="/dashboard/?page=<%= pages %>">Last</a>
        </li>
        <% } %>
      </ul>
    </nav>
    <% } %>
  </div>
</div>
