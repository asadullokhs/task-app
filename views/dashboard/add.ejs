<div class="container pb-4 mb-5">
  <div class="row mb-4">
    <div class="col">
      <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
          <li class="breadcrumb-item"><a href="/dashboard">Dashboard</a></li>
          <li class="breadcrumb-item active" aria-current="page">Add dask</li>
        </ol>
      </nav>
    </div>
    <div class="col">
      <h3 class="text-end text-primary">Add new task</h3>
    </div>
  </div>

  <form action="/dashboard/add" method="post" class="position-relqtive">
    <div class="form-group mb-4">
      <input
        type="text"
        class="form-control"
        placeholder="Enter your title..."
        name="title"
        id="title"
        required
      />
    </div>
    <div class="form-group mb-4">
      <textarea
        class="form-control"
        name="body"
        id="body"
        cols="30"
        rows="10"
        required="true"
      >
      Enter a task...
      </textarea>
    </div>
    <div class="form-group mb-4">
      <button class="btn btn-primary">Save task</button>
    </div>
  </form>
</div>
